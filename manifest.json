{
	"manifest_version": 2,
	"name": "TimeKeeper",
	"version": "0.0.1",

	"description": "Displays time spent being productive",

	"browser_action": {
    "default_title": "TimeKeeper",
    "default_popup": "popup.html"
	},

	"web_accessible_resources": [
    "bootstrap-table.css"
	],

	"background" : {
		"scripts": ["background.js"]
	},

	"permissions":[
		"activeTab",
		"tabs"
	]
}
